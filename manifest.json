{
  "name": "Medium Extension for Decluttering and Ordering",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Browser extension that removes clutter from Medium home page and order chronologically the publications",
  "content_scripts": [{
    "matches": [
      "https://medium.com/*",
      "https://*.medium.com/*"
    ],
    "css": [
      "css/styles.css"
    ],
    "js": [
      "js/helpers.js",
      "js/home.js",
      "js/topic.js",
      "js/events.js"
    ],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "history",
    "webNavigation",
    "webRequest",
    "https://*/*"
  ]
}